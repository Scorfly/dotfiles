[user]
    name  = Scorfly
    email = scorfly@gmail.com

[branch]
    autosetupmerge = true
    autosetuprebase = always

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    ci = commit -S
    co = checkout
    st = status
    br = branch
    df = diff
    dc = diff --cached
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    pushdev = !git push --set-upstream origin "`git branch --no-color 2>/dev/null | grep '*' | sed -e 's/\\* //'`:dev/lmarie/`git branch --no-color 2>/dev/null | grep '*' | sed -e 's/\\* //'`"
    rbm = !git fetch origin && git rebase origin/master
    rbmain = !git fetch origin && git rebase origin/main
    cia = commit --amend --reset-author
    poule = pull # joke

[push]
    default = tracking

[core]
    editor = vim

[credential]
    helper = cache
